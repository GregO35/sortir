<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Sortir.com{% endblock %}</title>

        <link rel="stylesheet" href="{{ asset ('css/bootstrap.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Josefin+Sans">
        <link rel="stylesheet" href="{{ asset ('css/app.css')}}">

        <link rel="icon" href="{{ asset('img/logo_sortir_favicon.png') }}"/>


    </head>
    <body>
        <div class="container">
            <header class="row align-items-baseline">
                <div class="site-title col-lg-2 d-flex justify-content-center">

                    <a href="#">

                        <img class="img-fluid" alt="Sortir.com" src="{{ asset('img/logo_sortir_web.jpg') }}">Sortir.com
                    </a>
                </div>

                <!-- <nav class="col-lg-5 nav flex-column flex-lg-row text-center pr-0">
                    {#{% if app.admin %}#}
                        <a class="nav-link" href="#">Villes</a>
                        <a class="nav-link" href="#">Sites</a>
                    {#{% endif %}#}
                </nav> -->

                <nav id="main-nav" class="col-lg-5 nav justify-content-md-end flex-column flex-lg-row text-center pr-0">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    {% if app.user %}
                        <a class="nav-link" href="{{ path('index') }}">Index</a>

                        <a class="nav-link" href="{{ path('gestion_lieu') }}">Gérer les lieux</a>

                        <a class="nav-link" href="{{ path('gestion_profil') }}">Mon profil</a>
                        <a class="nav-link" href="{{ asset("logout") }}">Se deconnecter</a>

                        {% if app.user.roles[0] == "admin" %}

                            <a class="nav-link" href="{{ path('user_list') }}">Gérer les utilisateurs</a>
                            <a class="nav-link" href="{{ path('app_register') }}">Créer un nouvel utilisateur</a>

                            <a class="nav-link" href="{{ path('gestion_ville') }}">Gérer les villes</a>


                        {% endif %}

                    {% else %}
                        <a class="nav-link" href="{{ asset('login') }}">Se connecter</a>
                        <a class="nav-link" href="{{ asset('register') }}">S'inscrire</a>
                    {% endif %}
                </nav>

    </header>




    <main>
        {% block content %}{% endblock %}

    </main>

<footer>
    <nav class="nav justify-content-center">

        <p><strong>Véronique /</strong></p>
        <p><strong> \ William /</strong></p>
        <p><strong>\ Grégory</strong></p>

    </nav>
</footer>


        </div>

        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('js/app.js') }}"></script>

    </body>
</html>
