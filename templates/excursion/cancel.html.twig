{% extends "base.html.twig" %}

{% block title %}Annulation de sortie{% endblock %}

{% block content %}

    <h1>Annuler une sortie</h1>

    <div>
        <label>Nom de la sortie: </label>
        <label>{{ excursion.name }}</label>
    </div>

    <div>
        <label>Date de la sortie: </label>
        <label>{{ excursion.startDate|date("d/m/Y H:i:s") }}</label>
    </div>

    {{ excursion.id }}

    <form method="post" action="{{ path('excursion_cancel', {'id': excursion.id}) }} }}">

        <div>
            <label for="description">Motif: </label>
            <input type="text" name="description" id="description">
        </div>

        <div>
            <div>
                <input type="submit" class="btn btn-primary" value="Enregistrer">
            </div>
            <div>
                <a href="{{ path('excursion_modif', {"id": excursion.id}) }}" class="btn btn-primary">Annuler</a>
            </div>
        </div>

    </form>

{% endblock %}