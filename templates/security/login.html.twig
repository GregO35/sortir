{% extends 'base.html.twig' %}

{% block title %}Se connecter !{% endblock %}

{% block content %}


    {#{% if error %}
        <div class="alert alert-danger">Mauvais identifiants !</div>
    {% endif %}#}
<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row">
                <div class="col-sm-6 offset-sm-3 text-center">
                    <h2 class="h3 mb-3 font-weight-normal">Se connecter</h2>

                    <div class="info-form">
                        <form method="post" action="" class="justify-content-center">

                            <div class="form-group">

                                <div class="float-left">
                                <label for="inputUsername" class="">Identifiant : </label>
                                </div>
                                <input type="text" value="" name="username" id="inputUsername" class="form-control" placeholder="nini44" required autofocus>
                            </div>

                            <div class="form-group">
                                <div class="float-left">
                                <label for="inputPassword" class="">Password : </label>
                                </div>
                                <input type="password" name="password" id="inputPassword"
                                       class="form-control" required>

                                <input type="hidden" name="_csrf_token"

                                       value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="d-inline">
                                <div class="float-left">
                                    <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
                                </div>
                                <div class="checkbox">
                                    <label class="float rounded-right"><input type="checkbox"> Se souvenir de moi</label>
                                </div>
                            </div>
                        </form>
                    </div>
              </div>
           </div>
        </div>
    </div>
</section>

{% endblock %}


